<%- include('partials/header') %>

    <div class="ui main text container segment" id="formContainer">
        <div class="ui huge header">
<h1 id="new_blog">Edit <%= blog.Title %> </h1>
            <form class="ui form" action="/blog/<%= blog._id %>?_method=PUT " method="POST">
                <div class="field">
                    <label for="newPostTitle">Title</label>
                    <input type="text" name="blog[Title]" id="newPostTitle" value="<%= blog.Title %>">
                </div>
    
                <div class="field">
                    <label for="newPostImage">Image Url</label>
                    <input type="text" name="blog[image]" id="newPostImage" value="<%= blog.image %>">
                </div>
                <div class=" field">
                    <label for="newPostBody">Text</label>
                    <textarea name="blog[body]" id="newPostBody"><%= blog.body %> </textarea>
                </div>
                <!-- <input class=" ui blue basic button" type="submit" value="Post"> -->
                <button class="ui labeled icon blue basic button" type="submit">
                    <i class="archive icon page"></i>
                    Post
                  </button>
            </form>
        </div>

    </div>

         
        


    <%- include('partials/footer') %>
